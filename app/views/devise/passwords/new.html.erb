<h2><%= t("Forgot password?") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="control-group">
    <%= f.label :email, t("Current account email"), class: "control-label" %>
    <div class="controls new_pw">
      <%= f.text_field :email, :required => true, :autofocus => true, class: "span4", placeholder: t("Your current account email") %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("Send me reset password instructions"), class: 'btn btn-success' %>
  </div>
<% end %>
