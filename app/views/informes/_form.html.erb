<p><%= t("Persona solicitante: ")%><%= informe.solicitante %></p>

<%= simple_form_for(informe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :matricula %>
    <%= f.input :usuario_id, as: :hidden %>
    <%= t("PDF actual", pdf: informe.pdf_file_name) unless informe.pdf_file_name.nil? %>
    <%= f.file_field :pdf %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
