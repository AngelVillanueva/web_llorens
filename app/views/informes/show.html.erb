<% provide :title, t( "Informe para", n: informe.matricula ) %>

<p><%= link_to "Volver al listado", informes_path %></p>

<div class="with_pdf">
  <h1>Informe para <%= informe.matricula %></h1>
  <table class="table-condensed table-hover table-bordered">
    <tbody>
      <tr><td>Matrícula</td><td><%= informe.matricula %></td></tr>
      <tr><td>Solicitante</td><td><%= informe.solicitante %></td></tr>
      <tr><td>Fecha solicitud</td><td><%= l informe.fecha_solicitud unless informe.fecha_solicitud.nil? %></td></tr>
      <tr>
        <td>Documentación</td>
        <td>
          <% if informe.pdf_file_name.nil? %>
            <%= t("pendiente") %>
          <% else %>
            <%= link_to "Ampliar PDF", informe.pdf.url %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <% unless informe.pdf_file_name.nil? %>
    <iframe class="pdf" src="<%= informe_trafico.pdf.url %>">
  <% end %>
</div>
