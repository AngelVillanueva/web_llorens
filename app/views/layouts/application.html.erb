<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= full_title( yield :title ) %></title>
    <meta name="description" content="<%= t('site_description') %>">
    <meta http-equiv="Content-Language" content="<%= I18n.locale %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= favicon_link_tag %>
    <%= render 'shared/fonts' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <a href="#" class="scrolltop"><span>&nbsp;&uarr;</span></a>
    <%= render 'shared/nav' %>
    <div class="container">
      <div class="row"><%= render 'shared/flash', flash: flash %></div>
      <div class="row"><%= render 'shared/organizacion' %></div>
      <% unless current_page? root_path %>
        <div class="row"><%= yield %></div>
      <% end %>
    </div>
    <% if current_page? root_path %>
      <div class="row"><%= yield %></div>
    <% end %>
    <div id="footer" class="coming-soon">
      <div class="container">
          <div class="row">
              <div class="span2 offset5">
                  <p>2013 - Gestor&iacute;a Llorens</p>
              </div>
          </div>
      </div>
    </div>
    
    <% unless Rails.env.production? %>
    <div>
      <a href="#" class="debug">debug<b></b></a>
      <div id="debug">
        <a href="http://0.0.0.0:3000/rails/routes" target="_blank" class="debug">Routes</a>
        <a href="http://0.0.0.0:3000/__better_errors" target="_blank" class="debug">Better errors</a>
        <div><%= debug(params) %></div>
        <div><%= debug(cookies) %></div>
      </div>
    </div>
  <% end %>
  <%= javascript_include_tag "application" %>
  </body>
</html>