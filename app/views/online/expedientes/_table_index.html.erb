      <% end %>
      <th><%= t("Comprador") %></th>
      <th><%= t("Vendedor") %></th>
      <% if expediente_type? expediente, 'transferencia' %>
        <th><%= t("Marca") %></th>
      <% end %>
      <th><%= t("Modelo") %></th>
      <th><%= t("Fecha de alta") %></th>
