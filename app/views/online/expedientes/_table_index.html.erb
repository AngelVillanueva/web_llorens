<table id="expedientes" class="row pull-right table table-condensed table-bordered table-striped top_filtered expedientes <%= expediente_type?(expediente, 'matriculacion') ? 'matriculacion' : 'transferencia' %>">
  <thead>
    <tr class="filter">
      <th><%= t("Cliente") %></th>
      <th><%= t("Matricula") %></th>
      <% if expediente_type? expediente, 'matriculacion' %>
        <th><%= t("Bastidor") %></th>
      <% end %>
      <th><%= t("Comprador") %></th>
      <% if expediente_type? expediente, 'transferencia' %>
        <th><%= t("Vendedor") %></th>
        <th><%= t("Marca") %></th>
      <% end %>
      <% if expediente_type? expediente, 'matriculacion' %>
        <th><%= t("Modelo") %></th>
      <% end %>
      <th><%= t("Alta") %></th>
      <th><%= t("Presentacion_t") %></th>
      <th><%= t("Salida_t") %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr class="titles">
      <th><%= t("Cliente") %></th>
      <th><%= t("Matricula") %></th>
      <% if expediente_type? expediente, 'matriculacion' %>
        <th><%= t("Bastidor") %></th>
      <% end %>
      <th><%= t("Comprador") %></th>
      <% if expediente_type? expediente, 'transferencia' %>
        <th><%= t("Vendedor") %></th>
        <th><%= t("Marca") %></th>
      <% end %>
      <% if expediente_type? expediente, 'matriculacion' %>
        <th><%= t("Modelo") %></th>
      <% end %>
      <th><%= t("Alta") %></th>
      <th><%= t("Presentacion_f") %></th>
      <th><%= t("Salida_f") %></th>
      <th><%= t("Tramite_d") %></th>
      <th><%= t("Documentos") %></th>
      <th><%= t("Observaciones") %></th>
    </tr>
  </thead>
  <tbody>
  <% expedientes.each do |expediente| %>
      <tr class="expediente">
        <td>
          <%= expediente.cliente.nombre %>
        </td>
        <td>
          <%= expediente.matricula %>
        </td>
        <% if expediente_type? expediente, 'matriculacion' %>
          <td>
            <%= expediente.bastidor %>
          </td>
        <% end %>
        <td>
          <%= expediente.comprador %>
        </td>
        <% if expediente_type? expediente, 'transferencia' %>
          <td>
            <%= expediente.vendedor %>
          </td>
          <td>
            <%= expediente.marca %>
          </td>
        <% end %>
        <% if expediente_type? expediente, 'matriculacion' %>
          <td>
            <%= expediente.modelo %>
          </td>
        <% end %>
        <td>
          <%= l expediente.fecha_alta unless expediente.fecha_alta.nil? %>
        </td><td>
          <%= l expediente.fecha_entra_trafico unless expediente.fecha_entra_trafico.nil? %>
        </td>
        <td>
          <%= l expediente.fecha_sale_trafico unless expediente.fecha_sale_trafico.nil? %>
        </td>
        <td>
          <%= expediente.dias_tramite %>
        </td>
        <td class="icon">
          <% if pdf_file(expediente) %>
            <%= link_to pdf_path(expediente) do %>
              <span><%= "Ver PDF" %></span>
              <i class="icon icon-file"></i>
            <% end %>
          <% else %>
            <span class="pendiente"><%= t("PDF Pendiente") %></span>
          <% end %>
        </td>
        <td>
          <%= expediente.observaciones %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>