        <th><%= t("Bastidor") %></th>
      <% end %>
      <th><%= t("Comprador") %></th>
      <th><%= t("Vendedor") %></th>
      <% if expediente_type? expediente, 'transferencia' %>
        <th><%= t("Marca") %></th>
      <% end %>
      <th><%= t("Modelo") %></th>
      <th><%= t("Fecha de alta") %></th>
      <th><%= t("Fecha presentación Tráfico") %></th>
      <th><%= t("Fecha salida Tráfico") %></th>
      <th><%= t("Días trámite") %></th>
      <th><%= t("Documentos") %></th>
      <th><%= t("Observaciones") %></th>
    </tr>
  </thead>
  <tbody>
  <% expedientes.each do |expediente| %>
      <tr class="">
        <td>
          <%= link_to expediente.matricula, this_expediente_path(expediente) %>
        </td>
        <% if expediente_type? expediente, 'matriculacion' %>
          <td>
            <%= expediente.bastidor %>
          </td>
        <% end %>
        <td>
          <%= expediente.comprador %>
        </td>
        <td>
          <%= expediente.vendedor %>
        </td>
        <% if expediente_type? expediente, 'transferencia' %>
          <td>
            <%= expediente.marca %>
          </td>
        <% end %>
        <td>
          <%= expediente.modelo %>
        </td>
        <td>
          <%= l expediente.fecha_alta unless expediente.fecha_alta.nil? %>
        </td><td>
          <%= l expediente.fecha_entra_trafico unless expediente.fecha_entra_trafico.nil? %>
        </td>
        <td>
          <%= l expediente.fecha_sale_trafico unless expediente.fecha_sale_trafico.nil? %>
        </td>
        <td>
          <%= expediente.dias_tramite %>
        </td>
        <td><%= link_to "Ver PDF", pdf_path(expediente) %></td>
        <td>
          <%= expediente.observaciones %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>