<% provide :title, t("Listado de Informes de Trafico") %>

<div class="about_page">
  <%= section_header t("Informes de trafico") %>
  <div class="row"><%= link_to 'Nuevo Informe', new_online_informe_path %></div>
  <div class="row">
    <table class="row pull-right table table-bordered table-striped table-condensed informe_traficos top_filtered">
  
  <thead>
    <tr class="filter">
      <th>Organización</th>
      <th>Matrícula</th>
      <th>Solicitante</th>
      <th>Fecha solicitud</th>
      <th>Finalizado</th>
      <th></th>
      <th></th>
    </tr>
    <tr class="titles">
      <th>Organización</th>
      <th>Matrícula</th>
      <th>Solicitante</th>
      <th>Fecha solicitud</th>
      <th>Finalizado</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
<% informes.each do |informe| %>
  <tr class="<%= informe.pdf_file_name.nil? && 'new' || '' %>">
    <td><%= informe.organizacion.nombre %></td>
    <td><%= link_to informe.matricula, online_informe_path(informe) %></td>
    <td><%= informe.solicitante %></td>
    <td><%= l informe.created_at, format: "%d/%m/%Y" %></td>
    <td><%= informe.pdf_file_name.nil? && t("En curso") || t('Si') %></td>
    <td class="icon">
      <% unless informe.pdf_file_name.nil? %>
        <%= link_to informe.pdf.url do %>
          <span><%= "Ver PDF" %></span>
          <i class="icon icon-file"></i>
        <% end %>
      <% else %>
        <%= t("pendiente") %>
      <% end %>
    </td>
    <td class="icon">
      <span></span>
      <%= link_to edit_online_informe_path(informe) do %>
          <span><%= "Editar" %></span>
          <i class="icon icon-edit"></i>
      <% end %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

  </div>
</div>