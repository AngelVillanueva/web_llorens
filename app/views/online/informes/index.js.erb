oTable = $( '#informes' ).dataTable();

<% if Rails.env.development? %>
  console.log("Checking new...");
<% end %>

<% if informes.count > 0 %>
  <% if Rails.env.development? %>
  console.log("found " + <%= informes.count %> + " new");
  <% end %>
  // populate temp table with new informes, then add to the table via fnAddTr,
  // then remove from temporary
  $( '#temp_table' ).prepend( "<%= j render( informes ) %>" );
    $( '#temp_table tr.informe' ).each(function(){
        oTable.fnAddTr( $( this ).get( 0 ) );
        $( this ).remove();
    });
  // sort the table taking into account the new informes
  oTable.fnSort( [ [ 4, 'desc' ] ] );
<% else %>
  <% if Rails.env.development? %>
  console.log( 'no new as informes was ' + <%= informes.count %> );
  <% end %>
<% end %>

$( '#informes tr.new' ).fadeIn();