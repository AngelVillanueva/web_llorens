<% provide :title, t("Area usuarios") %>

<%= render 'shared/avisos', avisos: avisos %>

<%= render 'shared/avisos_pulled' %>

<div class="about_page" data-pulltime="<%= new_avisos_pulltime %>">
  <h2 class="section_header">
    <hr class="left visible-desktop">
    <span>Seleccione una opción</span>
    <hr class="right visible-desktop">
  </h2>
  <div id="opciones" class="row">
    <ul>
    <li class="span3 teammate">
      <h5><%= link_to online_matriculaciones_path do %>
            <%= content_tag('span', "M", class: 'pie') %>
            <%= t("Matriculacion(VN)") %>
          <% end %>
      </h5>
      <p>Vehículo nuevo</p>
      <hr>
      <p class="description">Consulte los expedientes de Matriculación de Vehículos Nuevos</p>
    </li>
    <li class="span3 teammate">
      <h5><%= link_to online_transferencias_path do %>
            <%= content_tag('span', "T", class: 'pie') %>
            <%= t("Transferencia(VO)") %>
          <% end %>
      </h5>
      <p>Vehículo de Ocasión</p>
      <hr>
      <p class="description">Consulte los expedientes de Vehículos de Ocasión</p>
    </li>
    <li class="span3 teammate new">
      <h5><%= link_to new_online_justificante_path do %>
            <%= content_tag('span', "J", class: 'J pie') %>
            <%= t("Solicitud Justificantes") %>
          <% end %>
      </h5>
      <p>O bien <%= link_to "consulte", online_justificantes_path %> sus Justificantes</p>
      <hr>
      <p class="description">Solicite un Justificante y descárguelo en formato PDF</p>
    </li>
    <li class="span3 teammate new">
      <h5><%= link_to new_online_informe_path do %>
            <%= content_tag('span', "I", class: 'I pie') %>
            <%= t("Solicitud Informes") %>
          <% end %>
      </h5>
      <p>O bien <%= link_to "consulte", online_informes_path %> sus Informes</p>
      <hr>
      <p class="description">Solicite un Informe de Tráfico y descárguelo en formato PDF</p>
    </li>
    <% if @view_mandato == true %>
    <li class="span3 teammate new">
      <h5><%= link_to new_online_mandato_path do %>
            <%= content_tag('span', "MD", class: 'MD pie') %>
            <%= t("Solicitud Mandatos") %>
          <% end %>
      </h5>
      <p>O bien <%= link_to "consulte", online_mandatos_path %> sus Mandatos</p>
      <hr>
      <p class="description">Aceptación Mandato de forma online</p>
    </li>
    <% end %>
    <% if remarketing_links? %>
    <li class="span3 teammate new">
      <h5><%= link_to remarketing_link_first do %>
            <%= content_tag('span', "REM", class: 'REM pie') %>
            <%= t("Acceso Remarketing") %>
          <% end %>
      </h5>
      <p>Área de remarketing: <%= remarketing_link_title %></p>
      <hr>
      <p class="description">Remarketing online</p>
    </li>
    <li class="span3 teammate new">
      <h5><%= link_to new_online_documento_path do %>
            <%= content_tag('span', "DOC", class: 'DOC pie') %>
            <%= t("Solicitud Documentos") %>
          <% end %>
      </h5>
      <p>O bien <%= link_to "consulte", online_documentos_path %> sus Documentos</p>
      <hr>
      <p class="description">Solicite un Documento de Matriculación y descárguelo en formato PDF</p>
    </li>
    <li class="span3 teammate new">
      <h5><%= link_to online_drivers_path do %>
            <%= content_tag('span', "DRI", class: 'DRI pie') %>
            <%= t("Listado de Drivers") %>
          <% end %>
      </h5>
      <p>O bien <%= link_to "consulte", online_drivers_path %> sus Drivers</p>
      <hr>
      <p class="description">Consulte los Drivers de Matriculación y descárguelos en formato PDF</p>
    </li>
    <% end %>
    </ul>
  </div>
  <% if remarketing_links? && current_usuario.role == 'admin'%>
    <div class="row>">
      <ul class="remarketing">O acceda a las áreas de Remarketing que tiene disponibles:
        <%= remarketing_link_list %>
      </ul>
    </div>
  <% end %>
</div>