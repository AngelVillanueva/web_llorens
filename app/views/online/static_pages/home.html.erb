<% provide :title, t("Welcome") %>

<div class="about_page">
  <h2 class="section_header">
    <hr class="left visible-desktop">
    <span>Seleccione una opción</span>
    <hr class="right visible-desktop">
  </h2>
  <div class="row">
    <ul>
    <li class="span3 teammate">
      <h5><%= link_to online_matriculaciones_path do %>
            <%= content_tag('span', "M") %>
            <%= t("Matriculacion(VN)") %>
          <% end %>
      </h5>
      <p>Vehículo nuevo</p>
      <hr>
      <p class="description">Consulte los expedientes de Matriculación de Vehículos Nuevos</p>
    </li>
    <li class="span3 teammate">
      <h5><%= link_to online_transferencias_path do %>
            <%= content_tag('span', "T") %>
            <%= t("Transferencia(VO)") %>
          <% end %>
      </h5>
      <p>Vehículo de Ocasión</p>
      <hr>
      <p class="description">Consulte los expedientes de Matriculación de Vehículos de Ocasión</p>
    </li>
    <li class="span3 teammate">
      <h5><%= link_to online_justificantes_path do %>
            <%= content_tag('span', "J") %>
            <%= t("Solicitud Justificantes") %>
          <% end %>
      </h5>
      <p>Descargue su Justificante</p>
      <hr>
      <p class="description">Solicite un Justificante y descárguelo en formato PDF</p>
    </li>
    <li class="span3 teammate">
      <h5><%= link_to online_informes_path do %>
            <%= content_tag('span', "I") %>
            <%= t("Solicitud Informes") %>
          <% end %>
      </h5>
      <p>Descargue su Informe de Tráfico</p>
      <hr>
      <p class="description">Solicite un Informe de Tráfico y descárguelo en formato PDF</p>
    </li>
    </ul>
  </div>
</div>